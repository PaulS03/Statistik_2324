\subsection{d)}
%$E(Gewinn)=P(X>5)*Gewinn_eingetreten-P(X\leq5)*Gewinn_{nicht %eingetreten}$\\\\

\begin{flalign*}
Gewinn_{erwartet} & = P(X>5)*Gewinn_{eingetreten}-P(X\leq5)*Einsatz&\\
Gewinn_{erwartet} & = 0&\\
\Rightarrow 0 & = P(X>5)*Gewinn_{eingetreten}-P(X\leq5)*Einsatz&\\
\Leftrightarrow P(X>5)*Gewinn_{eingetreten} & = P(X\leq5)*Einsatz&\\
\Leftrightarrow P(X>5)*(Einsatz*(Quote-1)) & = P(X\leq5)*Einsatz&\\
\Leftrightarrow P(X>5)*(Quote-1) & = P(X\leq5)&\\
\Leftrightarrow P(X>5)*Quote-P(X>5)*1 & = P(X\leq5)&\\
\Leftrightarrow P(X>5)*Quote & = P(X\leq5)+P(X>5)&\\
\Leftrightarrow P(X>5)*Quote & = 1&\\
\Leftrightarrow Quote & = \frac{1}{P(X>5)}&\\
\end{flalign*}\\

