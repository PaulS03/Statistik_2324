\section{Satz von Bayes}
\subsection{a)}
$V \widehat{=} Vorbereitet \hspace{1cm} B \widehat{=} Bestanden$\\
$P(V)=0.9 \\
P(V^c)=0.1\\
P(B|V)=0.8 \\
P(B|V^c)=0.3$

\begin{flalign*}
P(B) & = P(V)*P(B|V)+P(V^c)*P(B|V^c)&\\
     & = 0.9*0.8+0.1*0.3&\\
     & = 0.75
\end{flalign*}

\begin{flalign*}
P(V|B) & = \frac{P(B|V)*P(V)}{P(B)}&\\
       & = \frac{0.8*0.9}{0.75}&\\
       & = \underline{\underline{0.96}}
\end{flalign*}\\

